<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.LoginAccout.HomeThamGia">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ImageView
            android:src="@drawable/c_hung_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:text="Let's Get Started"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:text="Let's dive in into your account"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/c_hung_rounded_border_thamgia"><!-- Sử dụng drawable để tạo đường viền tròn -->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_GG"
                        android:text="Đăng Nhập Bằng Google"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/c_hung_ic_google"
                        android:layout_gravity="left"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/c_hung_rounded_border_thamgia"> <!-- Sử dụng drawable để tạo đường viền tròn -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_AP"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:padding="8dp"
                        android:text="Đăng Nhập Bằng Apple"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/c_hung_ic_apple"
                        android:layout_gravity="left"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/c_hung_rounded_border_thamgia"> <!-- Sử dụng drawable để tạo đường viền tròn -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_FB"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:padding="8dp"
                        android:text="Đăng Nhập Bằng Facebook"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/c_hung_ic_facebook"
                        android:layout_gravity="left"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                >
                <Button
                    android:id="@+id/btn_SignUpThamGia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:text="Sign Up"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btn_SignInThamGia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/green_x1"
                    android:padding="8dp"
                    android:text="Sign In"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>