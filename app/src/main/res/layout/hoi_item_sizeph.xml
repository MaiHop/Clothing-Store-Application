<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_Size_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="XS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/hoi_item_no_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_line_item_size"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_marginBottom="24dp"
        android:background="#D8D8D8"
        android:gravity="center"
        android:rotation="135"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/tv_Size_cart"
        app:layout_constraintStart_toStartOf="@+id/tv_Size_cart" />
</androidx.constraintlayout.widget.ConstraintLayout>