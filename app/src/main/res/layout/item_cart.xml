<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="15dp"
    android:background="@drawable/solid_white_rad_5"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_Image_cart"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/solid_white_rad_5"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <CheckBox
            android:id="@+id/cb_Selected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">

            <TextView
                android:id="@+id/tv_TenSanPham_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Áo Polo Vải Dry Pique Ngắn Tay (Kẻ Sọc)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/tv_Size_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Size : L" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Mau_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color: Black" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_Color_cart"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:padding="1dp"
                    android:layout_gravity="center"
                    app:shapeAppearanceOverlay="@style/circular"
                    android:background="#000000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_SoLuong_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Qty : 1" />

            <TextView
                android:id="@+id/tv_ThanhTien_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="$ 980.000 VND"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/ib_Edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_check_box_outline_blank_24"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"/>

            <ImageButton
                android:id="@+id/ib_Remove"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_check_box_outline_blank_24"
                android:layout_gravity="end"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>