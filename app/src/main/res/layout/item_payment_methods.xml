<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_payment_method"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/solid_white_rad_5">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_Logo_ThanhToan"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:background="#528F65"
        android:padding="3dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="#EFEFEF"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/tv_TenThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center|start"
        android:layout_marginLeft="15dp"
        android:text="FedEx Express"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_PM_Checked"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="visible"
        app:srcCompat="@drawable/baseline_check_box_outline_blank_24" />


</LinearLayout>